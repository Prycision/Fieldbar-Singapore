<div
  id="dimensionsModal"
  class="dimensions-modal"
  style="display: none;">
  <div class="dimensions-modal-content">
    <span class="dimensions-close">&times;
    </span>
    <h2 style="margin-top: -0.3em; margin-bottom: -0.3em;">Size Guide
    </h2>

    {% assign country_code = localization.country.iso_code | default: 'GB' | upcase %}

    {% case country_code %}
      {% when 'GB' or 'EU' or 'FR' or 'DE' or 'AT' %}
        <div id="sz" class="container">
          {% comment %}
            <div class="column">
            <div class="details">
           <h2>
            <strong>MINI BAR
            </strong>
          </h2>
          <div class="metric active">
            190MM H X 250MM L X 160MM D
            <br>
            1.1 kg
            <br>
            4L
          </div>
          <div class="imperial">
           7.48 H X 9.84 L X 6.30 D INCHES
            <br>
            2.2 lbs
            <br>
            4.2 qt
          </div>
        </div>
            <div class="svg-container">
            <img
            src="{{ 'MinBar.svg' | asset_url }}"
            alt="Mini Bar"
            width="85">
            </div>
            </div>
          {% endcomment %}

          <div class="column">
            <div class="details">
              <h2>
                <strong>DRINKS BOX
                </strong>
              </h2>
              <div class="metric active">380MM H X 250MM L X 160MM D
                <br>
                1.8kg
                <br>
                10L
              </div>
              <div class="imperial">14.96 H X  9.84 L X  6.3 D INCHES
                <br>
                3.97 lbs
                <br>
                10.5 qt
              </div>
            </div>
            <div class="svg-container">
              <img src="{{ 'DrinksBox.svg' | asset_url }}" alt="Drinks Box">
            </div>
          </div>

          <div class="column">
            <div class="details">
              <h2>
                <strong>GIN TRUNK
                </strong>
              </h2>
              <div class="metric active">380MM H X 450MM L X 250MM D
                <br>
                4.9 kg
                <br>
                24L
              </div>
              <div class="imperial">14.96 H X 17.72 L X 9.84 D INCHES
                <br>
                10.8 lbs
                <br>
                25.4 qt
              </div>
            </div>
            <div class="svg-container">
              <img src="{{ 'GinTrunk.svg' | asset_url }}" alt="Gin Trunk">
            </div>
          </div>
        </div>

      {% else %}
        <div id="sz" class="container">
          <div class="column">
            <div class="details">
              <h2>
                <strong>DRINKS BOX
                </strong>
              </h2>
              <div class="metric active">380MM H X 250MM L X 160MM D
                <br>
                1.8kg
                <br>
                10L
              </div>
              <div class="imperial">14.96 H X  9.84 L X  6.3 D INCHES
                <br>
                3.97 lbs
                <br>
                10.5 qt
              </div>
            </div>
            <div class="svg-container">
              <img src="{{ 'DrinksBox.svg' | asset_url }}" alt="Drinks Box">
            </div>
          </div>
        </div>
    {% endcase %}

    <div class="toggle-container">
      <button class="metric-btn active-btn" onclick="toggleUnits('metric')">Metric
      </button>
      <button class="imperial-btn" onclick="toggleUnits('imperial')">Imperial
      </button>
    </div>
  </div>
</div>


<style>
  .title-block {
    display: inline-flex;
    justify-content: space-around;
  }
  .details > h2 {
    font-family: 'Gotham Book' !important;
    font-size: 2.8rem;
  }
  #size-guide > p {
    text-align: center;
  }
  .dimensions-link {
    text-decoration: none !important;
    color: #01324c;
  }
  .dimensions-modal {
    display: none;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: #0000002c;
    z-index: 9;
  }
  .dimensions-modal-content {
    background-color: #f3efeb;
    margin: 5% auto;
    padding: 30px;
    border: 1px solid #f3efeb;
    width: 80%;
    max-width: 100vw;
    border-radius: 8px;
    position: relative;
    height: 80%;
    max-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .dimensions-close {
    color: #002B4D;
    position: absolute;
    top: 15px;
    right: 25px;
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
  }

  .dimensions-close:hover {
    color: black;
  }

  .container {
    display: flex;
    justify-content: space-between;
    gap: 20px;
    max-width: 100%;
    margin: auto;
    width: 100%;
  }
  .column {
    display: flex;
    background: white;
    border: 1px solid #ddd;
    padding: 20px;
    width: 30%;
    box-shadow: 2px 2px 10px rgba(0, 0, 0, .1);
    justify-content: space-around;
    flex-direction: column;
    align-items: center;
    align-content: center;
    text-align: center;
    height: 50vh;
  }
  #sz {
    display: flex;
    justify-content: center;
    gap: 20px;
    max-width: 100%;
    margin: auto;
    width: 100%;
    flex-direction: row;
    align-content: center;
    align-items: center;
    padding-top: 20px;
  }

  .toggle-container {
    display: flex;
    justify-content: center;
  }

  .details {
    font-size: 14px;
    margin-bottom: 15px;
  }
  .metric,
  .imperial {
    display: none;
  }
  .active {
    display: block;
  }
  .svg-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .toggle-container {
    margin-top: 20px;
  }
  .toggle-container button {
    padding: 10px;
    margin: 5px;
    border: none;
    cursor: pointer;
    font-size: 16px;
    background-color: #dddddd00;
    border-radius: 4px;
  }
  .metric-btn {
    color: #002d53;
  }
  .imperial-btn {
    color: #002d53;
  }
  .active-btn {
    color: #ff8a3d;
  }

  @media screen and (max-width: 61.8125em) {
    .container {
      display: flex;
      flex-wrap: nowrap;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      gap: 20px;
      padding: 10px;
    }

    .column {
      flex: 0 0 auto;
      width: 80%;
      max-width: 300px;
    }
  }
  #dimensionsModal {
      display: none;
      opacity: 0;
      transition: opacity 0.5s ease;
  }

  #dimensionsModal.fade-in {
      opacity: 1;
  }

  #dimensionsModal.fade-out {
      opacity: 0;
  }
</style>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.getElementById('dimensionsModal');
    const btn = document.getElementById('openDimensionsModal');
    const span = document.getElementsByClassName('dimensions-close')[0];

    btn.onclick = function(e) {
        e.preventDefault();
        modal.style.display = 'block';
        document.body.style.overflow = 'hidden';

        // Wait for next repaint before adding fade-in
        requestAnimationFrame( () => {
            modal.classList.remove('fade-out');
            modal.classList.add('fade-in');
        }
        );
    }
    ;

    function closeModal() {
        modal.classList.remove('fade-in');
        modal.classList.add('fade-out');
        document.body.style.overflow = 'auto';

        setTimeout( () => {
            modal.style.display = 'none';
        }
        , 300);
        // Match transition duration
    }

    span.onclick = closeModal;

    window.onclick = function(event) {
        if (event.target === modal) {
            closeModal();
        }
    }
    ;
});

// Unit toggle functionality
function toggleUnits(unit) {
    document.querySelectorAll('.metric, .imperial').forEach( (el) => el.classList.remove('active'));
    document.querySelectorAll('.' + unit).forEach( (el) => el.classList.add('active'));

    document.querySelector('.metric-btn').classList.toggle('active-btn', unit === 'metric');
    document.querySelector('.imperial-btn').classList.toggle('active-btn', unit === 'imperial');
}
</script>
