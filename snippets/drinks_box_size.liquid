{% assign tags_string = product.tags | join: ',' | downcase %}
{% if tags_string contains 'drinks box' %}
  <div class="fits">
    <h2 style="text-transform: capitalize;">
      {% case localization.country.iso_code %}
        {% when 'DE' %}
          Mehr Platz als Sie denken
        {% when 'FR' %}
          Plus de place que vous ne l'auriez pensé
        {% else %}
          Fits more than you think
      {% endcase %}
    </h2>
    <div class="custom-list-container">
      <ul class="custom-list">
        {% assign items = "Pimm's & Lemonade, 3 Tennis Balls/ 10 Beers 330ml/ 3 Wine Bottles 750ml/ 2 Champagne Bottles 750ml" | split: '/'
        %}
        {% assign images = 'https://cdn.shopify.com/s/files/1/0654/1610/2127/files/DB_Capacity_Option_05.svg?v=1746694401,https://cdn.shopify.com/s/files/1/0654/1610/2127/files/DB_Option_beer_2.svg?v=1746694401,https://cdn.shopify.com/s/files/1/0654/1610/2127/files/DB_Capacity_Option_03.svg?v=1746694400,https://cdn.shopify.com/s/files/1/0654/1610/2127/files/DB_Capacity_Option_04.svg?v=1746694401'
          | split: ','
        %}

        {% for item in items %}
          <li
            style="text-transform: capitalize;"
            class="list-item {% if forloop.first %}active{% endif %}"
            data-image="{{ images[forloop.index0] }}">
            {{ item }}
          </li>
        {% endfor %}
      </ul>
      <div class="capacity" style="text-align: end;width: 100%;">
        <p>
          {% case localization.country.iso_code %}
            {% when 'DE' %}
              Fassungsvermögen | 10L
            {% when 'FR' %}
              Capacité | 10 L
            {% else %}
              Capacity | 10L
          {% endcase %}
        </p>
      </div>
      <div class="image-display cap-img">
        <img
          id="displayedImage"
          src="{{ images[0] }}"
          alt="Displayed Image"
          width="auto"
          height="auto">
      </div>
    </div>
    <a
      class="bottom-right cap-text"
      id="fancy_hover"
      href="/pages/size-guide">
      {% case localization.country.iso_code %}
        {% when 'DE' %}
          Mehr Lesen
        {% when 'FR' %}
          Lire Plus
        {% else %}
          Read More
      {% endcase %}
    </a>
  </div>
{% elsif tags_string contains 'gin trunk' %}
  <div class="fits">
    <h2 style="text-transform: capitalize;">Fits more than you think
    </h2>
    <div class="custom-list-container">
      <ul class="custom-list">
        {% assign items = '10 Wine Bottles 750ml / 32 standing beer cans 440ml/ 3 bottles of gin, 40 tonic & 3 tennis balls/ 8 champagne bottles 750ml' | split: '/'
        %}
        {% assign images = 'https://cdn.shopify.com/s/files/1/0654/1610/2127/files/GT_Option_01_png.webp?v=1747997759,https://cdn.shopify.com/s/files/1/0654/1610/2127/files/GT_Option_2_png.webp?v=1747997760,https://cdn.shopify.com/s/files/1/0654/1610/2127/files/GT_Option_3_png.webp?v=1747997760,https://cdn.shopify.com/s/files/1/0654/1610/2127/files/GT_Option_4_png.webp?v=1747997760'
          | split: ','
        %}

        {% for item in items %}
          <li
            style="text-transform: capitalize;"
            class="list-item {% if forloop.first %}active{% endif %}"
            data-image="{{ images[forloop.index0] }}">
            {{ item }}
          </li>
        {% endfor %}
      </ul>
      <div class="capacity" style="text-align: end;width: 100%;">
        <p>Capacity | 24L
        </p>
      </div>
      <div class="image-display cap-img">
        <img
          id="displayedImage"
          src="{{ images[0] }}"
          alt="Displayed Image"
          width="auto"
          height="auto">
      </div>
    </div>
    <a
      class="bottom-right cap-text"
      id="fancy_hover"
      href="/pages/size-guide">Read More
    </a>
  </div>
{% else %}
  {% style %}
    .fits-section {
      display: none !important;
    }
  {% endstyle %}
{% endif %}

{% style %}
  div.full_img {
    width: 100%;
    height: 70vh;
    background-image: url('https://cdn.shopify.com/s/files/1/0729/3753/7840/files/Jess_Animals_Illustrations_2_300b99b6-6fee-4ca4-aabf-393b576ec82d.png?v=1743134515');
    background-size: contain;
    background-repeat: no-repeat;
  }
  .custom-list-container {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    width: 100%;
  }

  div#fits_cen {
    height: 100% !important;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 2em;
  }
  .custom-list {
    list-style: decimal-leading-zero;
    padding: 0 0 0 4%;
    margin: 0;
    text-align: left;
  }

  h2 {
    font-family: 'SurveyorText Book Light Pro';
    font-size: 2em;
  }

  .list-item {
    cursor: pointer;
    transition: color .3s ease;
    font-family: 'Gotham Narrow Book' !important;
  }

  .list-item.active {
    font-style: italic;
    color: #01324c;
  }

  .image-display {
    margin-top: 20%;
    width: 100%;
    max-height: 60vh;
    display: flex;
    justify-content: center;
    align-items: center;
    align-content: center;
  }

  a.cap-text {
    color: #002d53 !important
  }

  .image-display > img {
    width: auto;
    max-width: 50vw;
    height: auto;
    object-fit: contain;
    height: 30vh;
  }
{% endstyle %}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const listItems = document.querySelectorAll('.list-item');
    const displayedImage = document.getElementById('displayedImage');

    listItems.forEach((item) => {
      item.addEventListener('mouseenter', function () {
        // Remove active class from all items
        listItems.forEach((i) => i.classList.remove('active'));

        // Add active class to hovered item
        this.classList.add('active');

        // Change displayed image
        displayedImage.src = this.dataset.image;
      });
    });
  });
</script>
