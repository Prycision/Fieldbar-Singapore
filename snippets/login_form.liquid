{% capture required %}{{ 'customer.general.required_fields' | t }}{% endcapture %}
{% comment %}
    <div class="container-indent bsm-customer-container nomargin notusedbsm-login-container">
    <div class="container">
    <h3 class="noborder bsm-customer-subtitle">{{ 'customer.login.title_main_html' | t }}</h3>
  {% endcomment %}

{% comment %} <div style="text-align: center" class="bsm-customer-sub-para">{{ 'customer.login.title_sub_html' | t }}</div> {% endcomment %}
{% assign country_code = localization.country.iso_code | default: 'GB' | upcase %}

{% case country_code %}
  {% when 'FR' %}
    <div class="owners-club-wrapper">
      <div id="login" class="owners-club-container">
        <h2 style="font-family:'Gotham Book' !important">OWNERS CLUB SE CONNECTER
        </h2>
        <p>
          Si vous êtes déjà inscrit au Club des propriétaires,
          <a href="{{ routes.account_login_url }}">veuillez vous connecter.
          </a>
          .
          <br>
        </p>

        <div class="owners-login-section">
          {% form 'customer_login' %}
            <div class="form-errors">
              {{ form.errors | default_errors }}
            </div>

            <div class="form-field">
              <label for="email">ADRESSE ÉLECTRONIQUE*
              </label>
              <input
                type="email"
                name="customer[email]"
                id="email"
                placeholder="Enter E-Mail Address"
                required>
            </div>

            <div class="form-field">
              <label for="password">MOT DE PASSE*
              </label>
              <input
                type="password"
                name="customer[password]"
                id="password"
                placeholder="Enter Password"
                required>
              <div class="forgot-password">
                <a href="#" onclick="showRecoverPasswordForm();return false;">Vous avez perdu votre mot de passe ??
                </a>
              </div>
            </div>

            <button type="submit" class="fieldbar_button">SE CONNECTER
            </button>
          {% endform %}
        </div>

        <div class="owners-register-section">
          <h2 style="font-family:'Gotham Book' !important">créer un compte OWNERS CLUB
          </h2>
          <p>
            Une fois que vous aurez créé un compte au Club des propriétaires, vous serez invité à enregistrer un produit et à confirmer votre adhésion. L'adhésion est
            <strong>GRATUITE.
            </strong>
            .
          </p>
          <button onclick="window.location.href='{{ routes.account_register_url }}'" class="fieldbar_button">
            CRÉER UN COMPTE
          </button>
        </div>
      </div>
      <div
        id="recover-password"
        style="display:none;"
        class="owners-club-container">
        <h2 style="font-family:'Gotham Book' !important">
          {{ 'customer.login.reset_password' | t }}
        </h2>
        {{ 'customer.login.reset_password_subtext' | t }}

        <div class="form-default form-top">
          {% form 'recover_customer_password' %}
            <div class="tt-base-color">
              {{ form.errors | default_errors }}
            </div>

            <div class="form-field">
              <label for="loginInputName">
                {{- 'customer.login.email' | t }}
              </label>
              <input
                value=""
                name="email"
                class="form-field"
                id="loginInputName"
                placeholder="{{ 'customer.login.email_field' | t }}"
                autocorrect="off"
                autocapitalize="off">
            </div>

            <div class="row">
              <div class="col-auto">
                <div class="form-group">
                  <button class="fieldbar_button" type="submit">
                    {{ 'customer.login.submit_recover' | t }}
                  </button>
                </div>
              </div>
              <div class="col-auto align-self-center">
                <div style="margin-top: 1em" class="form-group">
                  <a href="#" onclick="hideRecoverPasswordForm();return false;">CANCEL
                  </a>
                </div>
              </div>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  {% when 'DE' %}
    <div class="owners-club-wrapper">
      <div id="login" class="owners-club-container">
        <h2 style="font-family:'Gotham Book' !important">OWNERS CLUB ANMELDEN
        </h2>
        <p>
          Wenn Sie sich bereits für den Owners Club registriert haben, melden
          <a href="{{ routes.account_login_url }}">Sie sich bitte an.
          </a>
          .
          <br>
        </p>

        <div class="owners-login-section">
          {% form 'customer_login' %}
            <div class="form-errors">
              {{ form.errors | default_errors }}
            </div>

            <div class="form-field">
              <label for="email">E-MAIL-ADRESSE*
              </label>
              <input
                type="email"
                name="customer[email]"
                id="email"
                placeholder="Enter E-Mail Address"
                required>
            </div>

            <div class="form-field">
              <label for="password">PASSWORT*
              </label>
              <input
                type="password"
                name="customer[password]"
                id="password"
                placeholder="Enter Password"
                required>
              <div class="forgot-password">
                <a href="#" onclick="showRecoverPasswordForm();return false;">Haben Sie Ihr Passwort vergessen?
                </a>
              </div>
            </div>

            <button type="submit" class="fieldbar_button">LOGIN
            </button>
          {% endform %}
        </div>

        <div class="owners-register-section">
          <h2 style="font-family:'Gotham Book' !important">ein OWNERS CLUB konto erstellen
          </h2>
          <p>
            Sobald Sie ein Owners Club-Konto erstellt haben, werden Sie aufgefordert, ein Produkt zu registrieren und Ihre Mitgliedschaft zu bestätigen. Die Mitgliedschaft ist
            <strong>KOSTENLOS.
            </strong>
            .
          </p>
          <button onclick="window.location.href='{{ routes.account_register_url }}'" class="fieldbar_button">
            KONTO ERSTELLEN
          </button>
        </div>
      </div>
      <div
        id="recover-password"
        style="display:none;"
        class="owners-club-container">
        <h2 style="font-family:'Gotham Book' !important">
          {{ 'customer.login.reset_password' | t }}
        </h2>
        {{ 'customer.login.reset_password_subtext' | t }}

        <div class="form-default form-top">
          {% form 'recover_customer_password' %}
            <div class="tt-base-color">
              {{ form.errors | default_errors }}
            </div>

            <div class="form-field">
              <label for="loginInputName">
                {{- 'customer.login.email' | t }}
              </label>
              <input
                value=""
                name="email"
                class="form-field"
                id="loginInputName"
                placeholder="{{ 'customer.login.email_field' | t }}"
                autocorrect="off"
                autocapitalize="off">
            </div>

            <div class="row">
              <div class="col-auto">
                <div class="form-group">
                  <button class="fieldbar_button" type="submit">
                    {{ 'customer.login.submit_recover' | t }}
                  </button>
                </div>
              </div>
              <div class="col-auto align-self-center">
                <div style="margin-top: 1em" class="form-group">
                  <a href="#" onclick="hideRecoverPasswordForm();return false;">CANCEL
                  </a>
                </div>
              </div>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
  {% else %}
    <div class="owners-club-wrapper">
      <div id="login" class="owners-club-container">
        <h2 style="font-family:'Gotham Book' !important">OWNERS CLUB LOGIN
        </h2>
        <p>
          If you have already registered for the Owners Club, please
          <a href="{{ routes.account_login_url }}">log in
          </a>
          .
          <br>
        </p>

        <div class="owners-login-section">
          {% form 'customer_login' %}
            <div class="form-errors">
              {{ form.errors | default_errors }}
            </div>

            <div class="form-field">
              <label for="email">E-MAIL ADDRESS*
              </label>
              <input
                type="email"
                name="customer[email]"
                id="email"
                placeholder="Enter E-Mail Address"
                required>
            </div>

            <div class="form-field">
              <label for="password">PASSWORD*
              </label>
              <input
                type="password"
                name="customer[password]"
                id="password"
                placeholder="Enter Password"
                required>
              <div class="forgot-password">
                <a href="#" onclick="showRecoverPasswordForm();return false;">Lost your password?
                </a>
              </div>
            </div>

            <button type="submit" class="fieldbar_button">LOGIN
            </button>
          {% endform %}
        </div>

        <div class="owners-register-section">
          <h2 style="font-family:'Gotham Book' !important">CREATE AN OWNERS CLUB ACCOUNT
          </h2>
          <p>
            Once you have created an Owners Club account, you will be invited to register a product and confirm your
                                            membership. Membership is
            <strong>FREE
            </strong>
            .
          </p>
          <button onclick="window.location.href='{{ routes.account_register_url }}'" class="fieldbar_button">
            CREATE AN ACCOUNT
          </button>
        </div>
      </div>
      <div
        id="recover-password"
        style="display:none;"
        class="owners-club-container">
        <h2 style="font-family:'Gotham Book' !important">
          {{ 'customer.login.reset_password' | t }}
        </h2>
        {{ 'customer.login.reset_password_subtext' | t }}

        <div class="form-default form-top">
          {% form 'recover_customer_password' %}
            <div class="tt-base-color">
              {{ form.errors | default_errors }}
            </div>

            <div class="form-field">
              <label for="loginInputName">
                {{- 'customer.login.email' | t }}
              </label>
              <input
                value=""
                name="email"
                class="form-field"
                id="loginInputName"
                placeholder="{{ 'customer.login.email_field' | t }}"
                autocorrect="off"
                autocapitalize="off">
            </div>

            <div class="row">
              <div class="col-auto">
                <div class="form-group">
                  <button class="fieldbar_button" type="submit">
                    {{ 'customer.login.submit_recover' | t }}
                  </button>
                </div>
              </div>
              <div class="col-auto align-self-center">
                <div style="margin-top: 1em" class="form-group">
                  <a href="#" onclick="hideRecoverPasswordForm();return false;">CANCEL
                  </a>
                </div>
              </div>
            </div>
          {% endform %}
        </div>
      </div>
    </div>
{% endcase %}

<script type="text/javascript">
  function showRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'block';
    document.getElementById('login').style.display = 'none';
  }

  function hideRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'none';
    document.getElementById('login').style.display = 'block';
  }

  if (window.location.hash == '#recover') {
    showRecoverPasswordForm();
  }
</script>

{% style %}
  a {
    text-decoration: none;
    font-family: 'Gotham Medium' !important;
    color: #002b4d;
  }

  .owners-club-wrapper {
    background: #f3efeb;
    padding: 40px 20px;
    max-width: 500px;
    margin: auto;
    font-family: 'Gotham Narrow Book' !important;
    text-align: center;
    color: #002b4d;
  }

  .product-register {
    display: inline-block;
    margin-top: 5px;
    font-weight: bold;
    text-decoration: none;
  }

  .owners-login-section {
    margin-top: 30px;
    text-align: left;
  }

  .form-field {
    margin-bottom: 20px;
  }

  .form-field label {
    display: block;
    font-size: 14px;
    font-weight: bold;
    margin-bottom: 6px;
  }

  .form-field input {
    width: 100%;
    padding: 12px;
    font-size: 14px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  .forgot-password {
    text-align: right;
    margin-top: 6px;
  }

  .owners-register-section {
    margin-top: 20px;
  }

  .owners-register-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 10px;
  }

  .owners-register-section p {
    font-size: 14px;
    margin-bottom: 20px;
  }

  .form-errors {
    color: red;
    margin-bottom: 10px;
  }
{% endstyle %}

