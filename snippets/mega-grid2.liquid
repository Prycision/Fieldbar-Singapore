<div id="imgrid1" class="mega-menu-grid" style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px;">
  {% for menu_item in shop.metaobjects.mega_menu.values limit: 2 %}
    <div class="mega-menu-item2">
      {% if menu_item.img %}
        <img
          id="imgrid"
          src="{{ menu_item.img | file_url }}"
          alt="Mega menu image {{ forloop.index }}"
          loading="lazy">
      {% endif %}
    </div>
  {% else %}
    <p class="mega-menu-empty">No mega menu items found.
    </p>
  {% endfor %}
</div>
