{% schema %}
{
  "name": "Terms of Service Section",
  "tag": "section",
  "class": "terms-of-service-section",
  "settings": [
    {
      "type": "richtext",
      "id": "left_info",
      "label": "Left Info Text",
      "default": "<p>If you have an unresolved concern regarding our terms or service practices, please contact us at: <a href=\\\"mailto:support@example.com\\\">support@example.com</a></p>"
    }
  ],
  "presets": [
    {
      "name": "Terms of Service"
    }
  ]
}
{% endschema %}

<style>
.terms-of-service-section {
  display: flex;
  justify-content: flex-start;
  width: 100%;
}
.terms-of-service-section__left {
  width: 25vw;
  position: sticky;
  top: 0;
  align-self: flex-start;
  padding: 2rem;
  box-sizing: border-box;
}
.terms-of-service-section__right {
  width: 50vw;
  margin: 0 auto;
  padding: 2rem;
  box-sizing: border-box;
}
.terms-of-service-section__left .rte,
.terms-of-service-section__right .rte {
  font-family: 'Gotham Narrow Book', sans-serif;
  line-height: 1.6;
}
@media screen and (max-width: 768px) {
  .terms-of-service-section {
    flex-direction: column;
  }
  .terms-of-service-section__left,
  .terms-of-service-section__right {
    width: 100%;
    padding: 1.5rem;
    margin: 0;
  }
}
</style>

<div class="terms-of-service-section">
  <!-- LEFT STICKY PANEL -->
  <div class="terms-of-service-section__left">
    <div class="rte">
      {{ section.settings.left_info }}
    </div>
  </div>

  <!-- RIGHT PANEL -->
  <div class="terms-of-service-section__right">
    <p>Terms of Service</p>
    <div class="rte">
      {{ shop.terms_of_service.body }}
    </div>
  </div>
</div>
