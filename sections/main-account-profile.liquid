{{ 'account-owners-club.css' | asset_url | stylesheet_tag }}

{% style %}
  .owners-club-wrapper {
    background: #f3efeb;
    padding: 40px 20px;
    max-width: 1000px;
    margin: auto;
    font-family: 'Gotham Narrow Book' !important;
    color: #002b4d;
    text-align: center;
  }

  .owners-header {
    margin-bottom: 30px;
  }

  .owners-header .header-actions {
    font-size: 12px;
    text-transform: uppercase;
    font-family: 'Gotham Medium' !important;
  }

  .owners-header .header-actions button {
    background: none;
    border: none;
    padding: 0;
    margin: 0 5px;
    color: #002b4d;
    font-size: 12px;
    font-family: 'Gotham Medium' !important;
    cursor: pointer;
  }

  .owners-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 30px;
    flex-wrap: nowrap;
  }

  .owners-buttons .fieldbar_button {
    min-width: 220px;
    font-family: 'Gotham Medium' !important;
    text-transform: uppercase;
    font-weight: bold;
    cursor: pointer;
    padding: 14px 24px;
  }

  @media screen and (max-width: 767px) {
    .owners-buttons {
      flex-direction: column;
      align-items: center;
    }
  }

  .profile-section {
    background-color: #fff;
    padding: 40px 20px;
    margin-top: 40px;
    font-family: 'Gotham Narrow Book' !important;
    color: #002b4d;
  }

  .profile-section h4 {
    font-size: 18px;
    font-weight: bold;
    text-transform: uppercase;
    font-family: 'Gotham Medium' !important;
    margin-bottom: 30px;
    text-align: center;
  }

  .profile-row {
    display: flex;
    justify-content: space-between;
    gap: 40px;
    flex-wrap: wrap;
  }

  .profile-column {
    flex: 1;
    min-width: 300px;
  }

  .profile-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
  }

  .profile-table td {
    padding: 10px 0;
    border-bottom: 1px solid #eee;
    text-align: left;
  }

  .profile-table td:first-child {
    font-weight: bold;
    font-family: 'Gotham Medium' !important;
    width: 30%;
    white-space: nowrap;
  }

  .profile-actions {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 10px;
  }

  .profile-actions .fieldbar_button {
    width: 100%;
    padding: 14px;
  }
{% endstyle %}

<div class="owners-club-wrapper">
  <div class="owners-header">
    <div class="welcome-line">Welcome {{ customer.first_name }}
    </div>
    <div class="header-actions">
      <button onclick="window.location.href='/account?view=profile'">View Profile
      </button>
      |
      <button onclick="window.location.href='{{ routes.account_logout_url }}'">Log Out
      </button>
    </div>
  </div>

  <div class="owners-buttons">
    <button onclick="window.location.href='/account?view=register'" class="fieldbar_button">
      Register a New Product
    </button>
    <button onclick="window.location.href='/account?view=registered-products'" class="fieldbar_button">
      Make a Claim
    </button>
    <button onclick="window.location.href='/account?view=summary'" class="fieldbar_button">View Order History
    </button>
  </div>
</div>

<div class="profile-section">
  <h4>Your Profile
  </h4>

  <div class="profile-row">
    <div class="profile-column">
      <table class="profile-table">
        <tbody>
          <tr>
            <td>
              {{ 'customer.account.name' | t }}
            </td>
            <td>
              {{ customer.name }}
            </td>
          </tr>
          <tr>
            <td>
              {{ 'customer.account.email' | t }}
            </td>
            <td>
              {{ customer.email }}
            </td>
          </tr>
          {% if customer.default_address != null %}
            <tr>
              <td>
                {{ 'customer.account.address' | t }}
              </td>
              <td>
                {{ customer.default_address.address1 }}
              </td>
            </tr>
          {% endif %}
          {% if customer.default_address.address2 != null %}
            <tr>
              <td>
                {{ 'customer.account.address_2' | t }}
              </td>
              <td>
                {{ customer.default_address.address2 }}
              </td>
            </tr>
          {% endif %}
          {% if customer.default_address.country != null %}
            <tr>
              <td>
                {{ 'customer.account.country' | t }}
              </td>
              <td>
                {{ customer.default_address.city }},
                {% if address.province_code %}
                  {{ customer.default_address.province_code }},
                {% endif -%}
                {{- customer.default_address.country }}
              </td>
            </tr>
          {% endif %}
          {% if customer.default_address.zip != null %}
            <tr>
              <td>
                {{ 'customer.account.zip' | t }}
              </td>
              <td>
                {{ customer.default_address.zip }}
              </td>
            </tr>
          {% endif %}
          {% if customer.default_address.phone != null %}
            <tr>
              <td>
                {{ 'customer.account.phone' | t }}
              </td>
              <td>
                {{ customer.default_address.phone }}
              </td>
            </tr>
          {% endif %}
        </tbody>
      </table>
    </div>

    <div class="profile-column">
      <div class="profile-actions">
        <button onclick="window.location.href='{{ routes.account_addresses_url }}'" class="fieldbar_button">
          View/Edit Addresses ({{ customer.addresses_count }})
        </button>
      {% comment %}
        <button class="fieldbar_button" onclick="togglePasswordForm()">Reset Password</button>
        <div id="password_reset_form" class="password-reset-form" style="display:none">
        {% render 'reset' %}
        </div>
      {% endcomment %}
      </div>
    </div>
  </div>
</div>
<script>
  function togglePasswordForm() {
    const form = document.getElementById('password_reset_form');
    form.style.display = form.style.display === 'none' ? 'block' : 'none';
  }
</script>
