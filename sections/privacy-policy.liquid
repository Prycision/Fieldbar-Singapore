{% schema %}
{
  "name": "Privacy Policy Section",
  "tag": "section",
  "class": "privacy-policy-section",
  "settings": [
    {
      "type": "richtext",
      "id": "left_info",
      "label": "Left Info Text",
      "default": "<p>If you have an unresolved privacy or data use concern that we have not addressed satisfactorily, or if you have questions or complaints regarding this Policy or our privacy practices, please contact us at: <a href=\\\"mailto:privacy@example.com\\\">privacy@example.com</a></p>"
    }
  ],
  "presets": [
    {
      "name": "Privacy Policy"
    }
  ]
}
{% endschema %}

<style>
.privacy-policy-section {
  display: flex;
  justify-content: flex-start;
  width: 100%;
}
.privacy-policy-section__left {
  width: 25vw;
  position: sticky;
  top: 0;
  align-self: flex-start;
  padding: 2rem;
  box-sizing: border-box;
}
.privacy-policy-section__right {
  width: 50vw;
  margin: 0 auto;
  padding: 2rem;
  box-sizing: border-box;
}
.privacy-policy-section__left .rte,
.privacy-policy-section__right .rte {
  font-family: 'Gotham Narrow Book', sans-serif;
  line-height: 1.6;
}
@media screen and (max-width: 768px) {
  .privacy-policy-section {
    flex-direction: column;
  }
  .privacy-policy-section__left,
  .privacy-policy-section__right {
    width: 100%;
    padding: 1.5rem;
    margin: 0;
  }
}
</style>

<div class="privacy-policy-section">
  <!-- LEFT STICKY PANEL -->
  <div class="privacy-policy-section__left">
    <div class="rte">
      {{ section.settings.left_info }}
    </div>
  </div>

  <!-- RIGHT PANEL -->
  <div class="privacy-policy-section__right">
    <p>Privacy Policy</p>
    <div class="rte">
      {{ shop.privacy_policy.body }}
    </div>
  </div>
</div>
