{% schema %}
{
  "name": "MN Feature Product",
  "tag": "section",
  "class": "mn-feature-product",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Small Image (Linked)"
    },
    {
      "type": "url",
      "id": "left_image_link",
      "label": "Small Image Link"
    },
    {
      "type": "text",
      "id": "left_caption",
      "label": "Image Caption",
      "default": "DRINKS BOX / NELLIE PINK"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Product Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Nellie In A Box"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "We spared no effort or expense in developing a pink to perfectly match the Nellieâ€™s blush. A green leather handle alludes to the palms that so elegantly frame our favourite hotel."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP THE DRINKS BOX"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "MN Feature Product"
    }
  ]
}
{% endschema %}

<style>
.mn-feature-product {
  display: flex;
  height: 85vh;
  gap: 2em;
  padding: 0 1em;
  color: #002B4D;
  overflow: hidden;
  align-items: flex-start;
}

.mn-feature-product__left {
  display: flex;
  align-items: flex-start;
  height: 100%;
  width: 70%;
  gap: 1.5em;
}

.mn-feature-product__left .small {
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.mn-feature-product__left .small img {
  width: 100%;
  height: auto;
  display: block;
  margin-top: 0;
  padding-top: 0;
}

.mn-feature-product__caption {
  font-size: 0.9em;
  font-family: "Gotham Medium" !important;
  text-align: left;
  margin-top: 0.5em;
  color: #002B4D;
  letter-spacing: normal;
}

.mn-feature-product__left .large {
  width: 70%;
  height: 100%;
  overflow: hidden;
}

.mn-feature-product__left .large img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.mn-feature-product__left a {
  text-decoration: none;
}

.mn-feature-product__right {
  width: 30%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}

.mn-feature-product__right-inner {
  height: 10%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding: 1em;
}

.mn-feature-product__right h2 {
  font-size: 1.8rem;
  margin: 0 0 0.5em 0;
}

.mn-feature-product__right p {
  font-size: 1em;
  line-height: 1.6;
  margin: 0 0 1em 0;
}

.mn-feature-button {
  position: relative;
  display: inline-block;
  color: #002B4D;
  font-weight: 600;
  font-size: 1em;
  text-decoration: none;
  padding-bottom: 2px;
  transition: color 0.3s ease-in-out;
  width: fit-content;
}

.mn-feature-button::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  height: 2px;
  background-color: #FF8A3D;
  width: 100%;
  transform: scaleX(1);
  transform-origin: right;
  transition: transform 0.4s ease-in-out, background-color 0.4s ease-in-out;
  display: block;
}

.mn-feature-button:hover {
  color: #FF8A3D;
}

.mn-feature-button:hover::after {
  transform: scaleX(0);
  background-color: #FF8A3D;
}

@media screen and (max-width: 991px) {
  .mn-feature-product {
    flex-direction: column;
    height: auto;
    padding: 2em 1em;
  }

  .mn-feature-product__right {
    width: 100%;
    order: -1;
  }

  .mn-feature-product__right-inner {
    height: auto;
  }

  .mn-feature-product__right h2 {
    font-size: 1.5rem;
  }

  .mn-feature-product__left {
    flex-direction: row;
    width: 100%;
    flex-wrap: wrap;
    gap: 1em;
  }

  .mn-feature-product__left .small {
    width: 45%;
  }

  .mn-feature-product__left .large {
    width: 100%;
    margin-top: 1em;
  }

  .mn-feature-product__left img {
    height: auto;
  }

  .mn-feature-product__caption {
    text-align: left;
    padding-left: 0.5em;
  }
}
</style>

<!-- AOS REMOVED -->

<div class="mn-feature-product">
  <div class="mn-feature-product__left">
    <div class="small">
      {% if section.settings.left_image %}
        <a href="{{ section.settings.left_image_link }}">
          <img src="{{ section.settings.left_image | image_url: width: 400 }}" alt="{{ section.settings.left_caption | escape }}">
        </a>
        <div class="mn-feature-product__caption">{{ section.settings.left_caption }}</div>
      {% endif %}
    </div>
    <div class="large">
      {% if section.settings.main_image %}
        <img src="{{ section.settings.main_image | image_url: width: 800 }}" alt="{{ section.settings.heading | escape }}">
      {% endif %}
    </div>
  </div>

  <div class="mn-feature-product__right">
    <div class="mn-feature-product__right-inner">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.description }}</p>
      <a class="mn-feature-button" href="{{ section.settings.button_link }}">
        {{ section.settings.button_text }}
      </a>
    </div>
  </div>
</div>
