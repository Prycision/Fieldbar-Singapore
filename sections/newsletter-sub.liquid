{% schema %}
{
  "name": "Newsletter Subscription",
  "tag": "section",
  "class": "newsletter-sub",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "textarea",
      "id": "form_embed_code",
      "label": "Form Embed Code",
      "default": "<!-- Embed code here -->"
    }
  ],
  "presets": [
    {
      "name": "Newsletter Subscription Section"
    }
  ]
}
{% endschema %}

<style>
.newsletter-sub {
  width: 100vw;
  height: 85vh;
  position: relative;
  background-size: cover;
  background-position: center center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.newsletter-sub__form-container {
  width: 30vw;
  height: auto;
  background-color: white;
  padding: 2em;
  box-sizing: border-box;
  position: relative;
  z-index: 2;
}

/* Dashed red transparent border simulated using outline and outline-offset */
.newsletter-sub__form-container::after {
  content: "";
  position: absolute;
  top: -3px;
  left: -3px;
  right: -3px;
  bottom: -3px;
  border: 3px dashed white;
  pointer-events: none;
  z-index: -1;
}

.newsletter-sub__form-container form,
.newsletter-sub__form-container iframe,
.newsletter-sub__form-container > * {
  width: 100% !important;
  max-width: 100% !important;
  display: block;
}

@media screen and (max-width: 768px) {
  .newsletter-sub__form-container {
    width: 90vw;
    height: auto;
  }

  .newsletter-sub__form-container::after {
    top: -3px;
  left: -3px;
  right: -3px;
  bottom: -3px;
  }
}
</style>

<div class="newsletter-sub" style="background-image: url({{ section.settings.background_image | image_url }});">
  <div class="newsletter-sub__form-container">
    {{ section.settings.form_embed_code }}
  </div>
</div>
