{% schema %}
{
  "name": "Terms & Conditions",
  "tag": "section",
  "class": "t-and-c-section",
  "settings": [
    {
      "type": "richtext",
      "id": "left_info",
      "label": "Left Info Text",
      "default": "<p>If you have any questions about our terms and conditions or need assistance, please contact us at: <a href=\\\"mailto:support@example.com\\\">support@example.com</a></p>"
    },
    {
      "type": "richtext",
      "id": "right_content",
      "label": "Right Content (Editable T&Cs)",
      "default": "<h2>Terms & Conditions</h2><p>This is placeholder text for your Terms & Conditions. Use the theme editor to customize this content.</p>"
    }
  ],
  "presets": [
    {
      "name": "T&Cs Editable Section"
    }
  ]
}
{% endschema %}

<style>
.t-and-c-section {
  background-color: #F3EFEB;
}

.t-and-c-section .t-and-c-wrapper {
  display: flex;
  justify-content: flex-start;
  width: 100%;
}

.t-and-c-section .t-and-c__left {
  width: 25vw;
  position: sticky;
  top: 0;
  align-self: flex-start;
  padding: 2rem;
  box-sizing: border-box;
}

.t-and-c-section .t-and-c__right {
  width: 50vw;
  margin: 0 auto;
  padding: 2rem;
  box-sizing: border-box;
}

.t-and-c-section .t-and-c__left .rte,
.t-and-c-section .t-and-c__right .rte {
  font-family: 'Gotham Narrow Book', sans-serif;
  color: #002B4D;
  line-height: 1.6;
}

@media screen and (max-width: 768px) {
  .t-and-c-section .t-and-c-wrapper {
    flex-direction: column;
  }
  .t-and-c-section .t-and-c__left,
  .t-and-c-section .t-and-c__right {
    width: 100%;
    padding: 1.5rem;
    margin: 0;
  }
}
</style>

<section class="t-and-c-section">
  <div class="t-and-c-wrapper">
    <!-- LEFT STICKY PANEL -->
    <div class="t-and-c__left">
      <div class="rte">
        {{ section.settings.left_info }}
      </div>
    </div>

    <!-- RIGHT PANEL -->
    <div class="t-and-c__right">
      <div class="rte">
        {{ section.settings.right_content }}
      </div>
    </div>
  </div>
</section>
