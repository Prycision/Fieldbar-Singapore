{% schema %}
{
  "name": "MN Image Feature",
  "tag": "section",
  "class": "mn-image-feature",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A Particular Shade Of Pink."
    },
    {
      "type": "textarea",
      "id": "subcopy_left",
      "label": "Left Column Subcopy",
      "default": "First painted pink in 1918 to welcome in a new era of peace, Cape Town’s ‘Pink Lady’ has been synonymous with timeless style and elegance for over 125 years."
    },
    {
      "type": "textarea",
      "id": "subcopy_right",
      "label": "Right Column Subcopy",
      "default": "Inspired by both hotel and grounds, we designed this limited collection to conjure days spent lounging at the Nellie pool, in the shade of their verdant palms."
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Button Text",
      "default": "SHOP THE BUNDLE"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "image_caption",
      "label": "Image Caption",
      "default": "DRINKS BOX & TOWEL BUNDLE / NELLIE PINK"
    }
  ],
  "presets": [
    {
      "name": "MN Image Feature"
    }
  ]
}
{% endschema %}

<style>
.mn-image-feature {
  padding: 3em 1em;
  color: #002B4D;
  text-align: center;
}

.mn-image-feature h1 {
  font-size: 2rem;
  margin-bottom: 1.2em;
}

.mn-image-feature__subcopy-columns {
  display: flex;
  justify-content: center;
  gap: 2em;
  max-width: 1000px;
  margin: 0 auto 2em;
  flex-wrap: wrap;
  text-align: left;
  padding: 0 15%;
}

.mn-image-feature__subcopy-columns p {
  flex: 1 1 36%;
  font-size: 1em;
  line-height: 1.6;
  margin: 0;
}

.mn-image-feature__link {
  position: relative;
  display: inline-block;
  margin-bottom: 2em;
  text-decoration: none;
  color: #002B4D;
  font-weight: 600;
  font-size: 1em;
}

.mn-image-feature__link::after {
  content: "";
  position: absolute;
  right: 0;
  bottom: -2px;
  width: 100%;
  height: 2px;
  background-color: #FF8A3D;
  transform: scaleX(1);
  transform-origin: right;
  transition: transform 0.5s ease-in-out, background-color 0.5s ease-in-out;
}

.mn-image-feature__link:hover {
  color: #FF8A3D;
}

.mn-image-feature__link:hover::after {
  transform: scaleX(0);
  background-color: #FF8A3D;
}

.mn-image-feature__image {
  width: 100%;
  height: 65vh;
  max-height: 100vh;
  background-position: center center;
  background-size: cover;
  background-repeat: no-repeat;
  margin: 0 auto 1em;
  padding-left: 1em;
  padding-right: 1em;
}

.mn-image-feature__caption {
  font-size: 0.9em;
  font-family: "Gotham Medium"!important;
  text-align: left;
  margin-top: 0.5em;
  color: #002B4D;
}

.mn-image-feature__caption a {
  color: #002B4D;
  font-family: "Gotham Medium"!important;
  text-decoration: none;
  transition: opacity 0.3s ease;
}

.mn-image-feature__caption a:hover {
  opacity: 0.75;
}

@media screen and (max-width: 768px) {
  .mn-image-feature h1 {
    font-size: 1.5rem;
    text-align: left;
  }

  .mn-image-feature__subcopy-columns {
    flex-direction: column;
    gap: 1.2em;
    text-align: left;
    padding: 0 1em;
  }

  .mn-image-feature__subcopy-columns p {
    flex: 1 1 100%;
  }

  .mn-image-feature__link {
    text-align: left;
    margin-left: 1em;
  }

  .mn-image-feature__image {
    height: 65vh;
    padding-left: 1em;
    padding-right: 1em;
  }

  .mn-image-feature__caption {
    text-align: left;
    padding-left: 1em;
    padding-right: 1em;
  }
}
</style>

<div class="mn-image-feature">
  <h1>{{ section.settings.heading }}</h1>

  <div class="mn-image-feature__subcopy-columns">
    <p>{{ section.settings.subcopy_left | newline_to_br }}</p>
    <p>{{ section.settings.subcopy_right | newline_to_br }}</p>
  </div>

  <a class="mn-image-feature__link" href="{{ section.settings.link_url }}">
    {{ section.settings.link_text }}
  </a>

  {% if section.settings.image %}
    <div class="mn-image-feature__image"
         style="background-image: url('{{ section.settings.image | image_url: width: 1600 }}');">
    </div>
  {% endif %}

  <div class="mn-image-feature__caption">
    <a href="{{ section.settings.link_url }}">
      {{ section.settings.image_caption }}
    </a>
  </div>
</div>
